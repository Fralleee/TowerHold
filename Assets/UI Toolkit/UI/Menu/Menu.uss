VisualElement.screen {
	position: absolute;
	display: flex;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,.75);
	padding-top: 120px;
}

VisualElement.container {
	max-width: 480px;
	padding: 48px 0;
	display: flex;
	justify-content: center;
}

.InGame VisualElement.container {
	align-items: center;
}

VisualElement.container Button {
	width: 320px;
	height: 64px;
	margin: 24px;
	font-size: 32px;
	-unity-font-style: bold;
}
