VisualElement#PlayScreen {
    display: flex;
    flex-direction: row;
	align-items: center;
	background-color: #222;
}

VisualElement.container {
    position: relative;
	width: 100%;
    background-color: #d81719;
}

VisualElement.screen-content {
    position: relative;

	width: 100%;
	padding: 140px 0 60px 0;

    display: flex;
    flex-direction: column;
    align-items: center;
}

Label.title {
	position: absolute;
	top: -180px;
    font-size: 240px;
    color: white;
    -unity-font-style: bold;
    -unity-text-outline-width: 6px;
    -unity-text-outline-color: rgb(17, 17, 17);
    -unity-font-definition: url("/Assets/Art/Fonts/Inter.ttf");
}

VisualElement.button-container {
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

VisualElement.button-container > * {
	margin: 0 20px;
}
