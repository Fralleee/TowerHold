VisualElement.HoverMenu {
    display: none;
    position: absolute;
	bottom: 25px;
	left: -50px;
    padding: 10px;
	min-width: 200px;
	min-height: 300px;
    background-color: rgba(255,255,255,.85);
	border-color: #444;
    border-radius: 5px;
	opacity: 0;
	transition: all 100ms ease-out;
}

Button:enabled:hover VisualElement.HoverMenu {
	display: flex;
	opacity: 1;
	transition: all 250ms ease-out;
}

VisualElement.Divider {
	height: 1px;
	background-color: #444;
	margin: 5px 0;
}
