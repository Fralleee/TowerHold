VisualElement#ShopContainer {
    position: relative;
    margin: 0 auto;
    display: flex;
    justify-content: flex-end;
	align-self: flex-end;
}

VisualElement#GameInfo {
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

VisualElement#Inventory {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

VisualElement#Items {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
	margin: 0 16px;
}

VisualElement#Progress {
	display: flex;
	flex-direction: row;
    justify-content: space-between;
	padding: 0 108px;
	margin-bottom: 8px;
}

VisualElement#GameInfo > Label {
	margin: 12px;
	background-color: rgba(0,0,0,.9);
	color: goldenrod;
	padding: 6px 12px;
	border-radius: 12px;
	-unity-font-style: bold;
}

#HealthBar, #LevelBar {
	width: 49%;
}

#HealthBar .ProgressBar__progress {
	background-color: #77B032;
}

#LevelBar .ProgressBar__progress {
	transition: all 250ms ease-out;
	background-color: #C64283;
}

#LevelBar.active .ProgressBar__progress {
	background-color: #479DC9;
}

#LevelBar .ProgressBar__icon {
	background-image: url("/Assets/Art/Textures/Icons/progress.png");
}

Button#RefreshButton, Button#LockButton {
	border-radius: 50%;
	width: 75px;
	height: 75px;
	background-size: 50px 50px;
}

Button#RefreshButton {
	background-image: url("/Assets/Art/Textures/Icons/cycle.png");
}

Button#LockButton {
	background-image: url("/Assets/Art/Textures/Icons/padlock-open.png");
}

Button#LockButton.active {
	background-color: #444;
	background-image: url("/Assets/Art/Textures/Icons/padlock.png");
}

Button.ShopItem {
    width: 125px;
    height: 125px;
	margin: 0 10px;
	border-width: 2px;
	background-size: 96px 96px;
	background-color: #121618;
	scale: 1;
}

VisualElement#Inventory.active Button.ShopItem {
	scale: 0;
}

VisualElement#Inventory.active Button.ShopItem.itemized {
	scale: 1;
}

VisualElement.TypeContainer {
	position: absolute;
	left: 0;
	top: 0;
	border-radius: 50%;
	background-color: #121618;
	padding: 4px;

	transition: all 200ms ease-out;
}

VisualElement.TypeContainer VisualElement.Type {
	width: 24px;
	height: 24px;
    border-radius: 50%;
}

Label.Hotkey {
	position: absolute;
	left: 20px;
	bottom: -20px;

	min-width: 24px;
	min-height: 24px;

	color: white;
	font-size: 12px;
	-unity-font-style: bold;

    border-radius: 8px;
	border-width: 2px;
	border-color: #000;
	background-color: #121618;
}

.ShopItem > Label.Hotkey {
	left: 46px;
}

Button.ShopItem.itemized:disabled .TypeContainer {
	opacity: 0;
}

Button#RefreshButton:enabled:hover, Button#LockButton:enabled:hover {
	scale: 1.1;
}
Button#RefreshButton:enabled:active, Button#LockButton:enabled:active {
	scale: 0.9;
}

.TEST-CONTAINER {
	display: flex;
	flex-direction: row;
}

.TEST-CONTAINER > * {
	margin: 8px;
}

.TESTBUTTON {
	position: relative;
	background-color: transparent;
	border-color: transparent;
}

.TESTBUTTON:hover {
	scale: 1;
}

.TESTBUTTON:hover > .TEST {
	rotate: -45deg;
	scale: 1;
}

.TEST {
	width: 120px;
	height: 120px;
	background-color: #F7C94B;
	border-width: 4px;
	border-color: #111;
	rotate: 0deg;
	scale: 1.2;
	border-radius: 24px;
	transition: all 200ms ease-out-back;
}

/* .TESTBUTTON.turret > .TEST, .TESTBUTTON.turret > .TEST-CHILD {
	border-radius: 0;
} */

.TEST-CHILD {
	position: absolute;
	left: 7px;
	top: 5px;
	width: 130px;
	height: 130px;
	background-color: #222;
	border-width: 4px;
	border-color: #111;
	border-radius: 24px;
	background-image: url("/Assets/Art/Textures/Icons/hatchet.png");
	background-size: 80% 80%;
	transition: all 200ms ease-out-back;
}

.TEST-TYPECONTAINER {
	position: absolute;
	left: 14px;
	right: 14px;
	top: 12px;

	display: flex;
	flex-direction: row;
	justify-content: space-between;
}


.TEST-TYPE {
	width: 28px;
	height: 28px;
	background-color: #222;
    border-radius: 50%;
	background-image: url("/Assets/Art/Textures/Icons/normal.png");
	background-size: 20px;
}

.TEST-UPGRADE {
	width: 28px;
	height: 28px;
	background-color: #222;
    border-radius: 50%;
	background-image: url("/Assets/Art/Textures/Icons/plus.png");
	background-size: 16px;
}

.TESTBUTTON.turret .TEST-UPGRADE {
	display: none;
}

.TESTBUTTON.common > .TEST { background-color: #D1D1D1; }
.TESTBUTTON.common .TEST-UPGRADE { -unity-background-image-tint-color: #D1D1D1; }
.TESTBUTTON.common > .TEST-CHILD { -unity-background-image-tint-color: #D1D1D1; }

.TESTBUTTON.uncommon > .TEST { background-color: #B6FF4E; }
.TESTBUTTON.uncommon .TEST-UPGRADE { -unity-background-image-tint-color: #B6FF4E; }
.TESTBUTTON.uncommon > .TEST-CHILD {
	-unity-background-image-tint-color: #B6FF4E;
	background-image: url("/Assets/Art/Textures/Icons/spine-arrow.png");
}

.TESTBUTTON.rare > .TEST { background-color: #457FFF; }
.TESTBUTTON.rare .TEST-UPGRADE { -unity-background-image-tint-color: #457FFF; }
.TESTBUTTON.rare > .TEST-CHILD {
	 -unity-background-image-tint-color: #457FFF;
	background-image: url("/Assets/Art/Textures/Icons/laser-gun.png");
 }

.TESTBUTTON.epic > .TEST { background-color: #BA6DFF; }
.TESTBUTTON.epic .TEST-UPGRADE { -unity-background-image-tint-color: #BA6DFF; }
.TESTBUTTON.epic > .TEST-CHILD {
	-unity-background-image-tint-color: #BA6DFF;
	background-image: url("/Assets/Art/Textures/Icons/pocket-bow.png");
}

.TESTBUTTON.legendary > .TEST { background-color: #FF752D; }
.TESTBUTTON.legendary .TEST-UPGRADE { -unity-background-image-tint-color: #FF752D; }
.TESTBUTTON.legendary > .TEST-CHILD {
	-unity-background-image-tint-color: #FF752D;
	background-image: url("/Assets/Art/Textures/Icons/stone-sphere.png");
}
